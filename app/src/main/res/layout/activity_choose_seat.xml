<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kBackgroundColor"
    android:fillViewport="true"
    tools:context=".view.chooseseat.ChooseSeatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_select_your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/select_your_nfavorite_seat"
            android:textColor="@color/kBlackColor"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_available"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_available"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_your" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/poppins"
            android:text="@string/available"
            android:textColor="@color/kBlackColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_available"
            app:layout_constraintStart_toEndOf="@id/iv_available"
            app:layout_constraintTop_toTopOf="@id/iv_available" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_selected"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_selected"
            app:layout_constraintBottom_toBottomOf="@id/tv_available"
            app:layout_constraintStart_toEndOf="@id/tv_available"
            app:layout_constraintTop_toTopOf="@id/tv_available" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/poppins"
            android:text="@string/selected"
            android:textColor="@color/kBlackColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_selected"
            app:layout_constraintStart_toEndOf="@id/iv_selected"
            app:layout_constraintTop_toTopOf="@id/iv_selected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_unavailable"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_unavailable"
            app:layout_constraintBottom_toBottomOf="@id/tv_selected"
            app:layout_constraintStart_toEndOf="@id/tv_selected"
            app:layout_constraintTop_toTopOf="@id/tv_selected" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/poppins"
            android:text="@string/unavailable"
            android:textColor="@color/kBlackColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_unavailable"
            app:layout_constraintStart_toEndOf="@id/iv_unavailable"
            app:layout_constraintTop_toTopOf="@id/iv_unavailable" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bg_seat"
            android:layout_width="match_parent"
            android:layout_height="498dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/custom_background_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_selected" />


        <LinearLayout
            android:id="@+id/line_ket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toTopOf="@id/iv_bg_seat">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/a"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/b"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text=""
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/c"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/d"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_chose_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toBottomOf="@id/line_ket">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/a1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_unavailable_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_unavailable_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/_1"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/c1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/d1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_unavailable_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_chose_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toBottomOf="@id/line_chose_1">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/a2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/_2"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/c2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/d2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_unavailable_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_chose_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toBottomOf="@id/line_chose_2">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/a3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selected_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selected_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/_3"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/c3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/d3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_chose_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toBottomOf="@id/line_chose_3">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/a4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_unavailable_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/_4"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/c4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/d4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_chose_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toBottomOf="@id/line_chose_4">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/a5"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b5"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/_5"
                android:textColor="@color/kGreyColor"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/c5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_unavailable_background" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/d5"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/seat_selector_background" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_your_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/your_seat"
            android:textColor="@color/kGreyColor"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toBottomOf="@id/line_chose_5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/kBlackColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_your_seat"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintTop_toTopOf="@id/tv_your_seat"
            tools:text="A3, B3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/total"
            android:textColor="@color/kGreyColor"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/iv_bg_seat"
            app:layout_constraintTop_toBottomOf="@id/tv_your_seat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/kPrimaryColor"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintBottom_toBottomOf="@id/total"
            app:layout_constraintEnd_toEndOf="@id/iv_bg_seat"
            app:layout_constraintTop_toTopOf="@id/total"
            tools:text="IDR 540.000.000" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continue_check"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/custom_background_button"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/continue_to_checkout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bg_seat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>